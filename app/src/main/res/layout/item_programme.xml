<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/organic_surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Nom du programme -->
        <TextView
            android:id="@+id/tvNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Programme Nom"
            android:textColor="@color/organic_text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description du programme"
            android:textColor="@color/organic_text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDuree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… 30 jours"
                android:textColor="@color/organic_text_primary"
                android:textSize="12sp"
                android:background="@color/organic_card_bg"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvObjectif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯ Perte de poids"
                android:textColor="@color/organic_text_primary"
                android:textSize="12sp"
                android:background="@color/organic_card_bg"
                android:padding="8dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Counts Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvPlatsCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ½ï¸ 15 plats"
                android:textColor="@color/organic_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvActivitesCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ’ª 10 activitÃ©s"
                android:textColor="@color/organic_primary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
