<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/organic_background">

    <!-- Header -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_header_organic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        android:tint="@color/white"
        android:contentDescription="Retour"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/programmeicon"
        android:scaleType="centerInside"
        android:contentDescription="Programme"
        app:layout_constraintTop_toTopOf="@id/headerBackground"
        app:layout_constraintBottom_toBottomOf="@id/headerBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/organic_surface"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Nom -->
                <TextView
                    android:id="@+id/tvNom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nom du programme"
                    android:textColor="@color/organic_text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/organic_text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp" />

                <!-- Info Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:padding="12dp"
                    android:background="@color/organic_card_bg">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvDuree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 jours"
                            android:textColor="@color/organic_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Durée"
                            android:textColor="@color/organic_text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="@color/organic_border" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvObjectif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perte de poids"
                            android:textColor="@color/organic_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Objectif"
                            android:textColor="@color/organic_text_secondary"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Plats Section -->
                <TextView
                    android:id="@+id/tvPlatsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plats recommandés"
                    android:textColor="@color/organic_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:background="@drawable/bg_button_green"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvPlatsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Liste des plats"
                    android:textColor="@color/organic_text_primary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="16dp" />

                <!-- Activités Section -->
                <TextView
                    android:id="@+id/tvActivitesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activités sportives"
                    android:textColor="@color/organic_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:background="@drawable/bg_button_green"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvActivitesList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Liste des activités"
                    android:textColor="@color/organic_text_primary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="16dp" />

                <!-- Conseils Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conseils"
                    android:textColor="@color/organic_text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:background="@drawable/bg_button_green"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvConseilsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Liste des conseils"
                    android:textColor="@color/organic_text_primary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="16dp" />

                <!-- Inscrire Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInscrire"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="S'inscrire à ce programme"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_button_green"
                    android:textStyle="bold"
                    android:layout_marginTop="28dp"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/organic_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
