<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/organic_surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Nom -->
        <TextView
            android:id="@+id/tvNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Programme Nom"
            android:textColor="@color/organic_text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Dates -->
        <TextView
            android:id="@+id/tvDateDebut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DÃ©but: 2024-01-01"
            android:textColor="@color/organic_text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvDateFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fin: 2024-01-31"
            android:textColor="@color/organic_text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- Statut Badge -->
        <TextView
            android:id="@+id/tvStatut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En cours"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_marginTop="12dp" />

        <!-- Progression -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Progression"
            android:textColor="@color/organic_text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/organic_primary" />

            <TextView
                android:id="@+id/tvProgression"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="@color/organic_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Progression Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlus10"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="+10%"
                android:textColor="@color/organic_primary"
                app:strokeColor="@color/organic_primary"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlus25"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="+25%"
                android:textColor="@color/organic_primary"
                app:strokeColor="@color/organic_primary"
                app:cornerRadius="8dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
